<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo1"
    tools:context=".Pregunta5">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationEnd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_rawRes="@raw/espadas"
            />


        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/fuente3"
                android:text="@string/pregunta5"
                android:textColor="@color/black"
                android:textSize="40sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/des11"
                android:textSize="25sp"
                android:fontFamily="@font/fuente3"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/SonPhp1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@drawable/btnpreguntas"
                    android:fontFamily="@font/fuente3"
                    android:text="@string/boton1">

                </Button>

                <Button
                    android:id="@+id/SonLaravel1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="@drawable/btnpreguntas"
                    android:text="@string/boton2"
                    android:fontFamily="@font/fuente3">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center">

                <Button
                    android:id="@+id/SonKotlin1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@drawable/btnpreguntas"
                    android:text="@string/boton3"
                    android:fontFamily="@font/fuente3"


                    >

                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

                <Button
                    android:id="@+id/SonJavaScript1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="@drawable/btnpreguntas"
                    android:text="@string/boton4"
                    android:fontFamily="@font/fuente3">

                </Button>

            </LinearLayout>


            <TextView
                android:id="@+id/txtPuntaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:fontFamily="@font/fuente3"

                />

        </LinearLayout>
    </FrameLayout>


</LinearLayout>
